<% layout('layouts/boilerplate')%>
    <div class="row">
        <!-- offset-3 -->
        <div class="col-12 col-md-8 col-lg-7 offset-md-3 ">
            <div class="card mb-3">
                <img src="<%=meme.url %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">By - <%= meme.name %>
                    </h5>
                    <p class="card-text">
                        <%= meme.caption%>
                    </p>
                </div>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/memeland/<%=meme._id%>/edit">
                        Edit</a>
                    <form class="d-inline" action="/memeland/<%=meme._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <a class="card-link btn btn-success" href="/memeland">All Memes</a>
                </div>
            </div>
        </div>
    </div>