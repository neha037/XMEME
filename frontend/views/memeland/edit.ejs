<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Meme</h1>
        <div class="col-6 offset-3">
            <form action="/memeland/<%=meme._id%>?_method=PUT" method="POST" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="caption">Caption</label>
                    <input class="form-control" type="text" id="caption" name="meme[caption]"
                        value="<%= meme.caption%>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="url" >Image url</label>
                    <input class="form-control" type="text" id="url" name="meme[url]" value="<%=meme.url %>" required>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update meme</button>
                </div>
            </form>
            <a class="card-link btn btn-info" href="/memeland/<%= meme.id %> ">Back To meme</a>

        </div>
    </div>
